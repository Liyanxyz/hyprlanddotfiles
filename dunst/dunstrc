# Dunst configuration with Ayu Dark theme

[global]
    font = JetBrainsMono Nerd Font 12
    
    # Geometry
    width = (200, 350)
    height = 250
    origin = top-right
    offset = 15x15
    
    # Progress bar
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 0
    progress_bar_min_width = 200
    progress_bar_max_width = 350
    
    # Appearance
    corner_radius = 0
    frame_width = 3
    separator_height = 1
    separator_color = frame
    padding = 12
    horizontal_padding = 12
    text_icon_padding = 12
    gap_size = 6
    
    # Text
    alignment = left
    vertical_alignment = center
    markup = full
    format = "<b>%s</b>\n%b"
    line_height = 2
    
    # Behavior
    show_age_threshold = 60
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    sort = yes
    
    # Icons
    icon_position = left
    max_icon_size = 40
    min_icon_size = 24
    icon_theme = Adwaita
    enable_recursive_icon_lookup = true
    
    # History
    sticky_history = yes
    history_length = 20
    
    # Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all

[urgency_low]
    background = "#0a0e14"
